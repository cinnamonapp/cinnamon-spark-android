<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">

    <RelativeLayout
        android:id="@+id/cle_meal_top_bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/cle_user_image_dimension"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:padding="@dimen/generic_margin">

        <ImageView
            android:id="@+id/cle_meal_user_image"
            android:layout_width="@dimen/cle_user_image_dimension"
            android:layout_height="@dimen/cle_user_image_dimension"
            android:src="@drawable/ic_launcher"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:contentDescription="Img" />

        <TextView
            android:id="@+id/cle_meal_created_at"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="000-00-00"
            android:gravity="center_vertical"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/cle_meal_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cle_meal_top_bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_launcher"
        android:minHeight="@dimen/cle_meal_image_min_height"/>

    <TextView
        android:id="@+id/cle_meal_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#test #text"
        android:layout_below="@+id/cle_meal_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="@dimen/generic_margin"/>

</RelativeLayout>